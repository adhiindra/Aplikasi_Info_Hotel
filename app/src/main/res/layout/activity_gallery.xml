<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="800dp">


            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:layout_weight="70"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/image"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/image_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Canada"
                android:textColor="#000"
                android:textSize="20sp" />

            <RatingBar
                android:id="@+id/rating_detail"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_description"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.1" />

            <TextView
                android:id="@+id/alamat_hotel"
                android:layout_width="392dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rating_detail"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="465dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/jl_uluwatu_45_jimbaran_bali_kabupaten_badung_bali_80361"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/alamat_hotel"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp"
                android:layout_toEndOf="@+id/imageView"
                android:text="@string/_2_guests" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/imageView"
                android:text="1 Double Bed Or 2 Single Beds" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="28dp"
                android:layout_toEndOf="@+id/imageView4"
                android:text="Include Breakfast" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@+id/imageView3"
                android:text="Free Wifi"
                android:textColor="@color/colorAccent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="23dp"
                android:layout_height="16dp"
                android:layout_below="@+id/alamat_hotel"
                android:layout_alignParentStart="true"
                android:layout_marginStart="9dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/a" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="28dp"
                android:layout_height="25dp"
                android:layout_below="@+id/imageView"
                android:layout_alignParentStart="true"
                android:layout_marginStart="7dp"
                android:layout_marginTop="3dp"
                app:srcCompat="@drawable/c" />

            <TextView
                android:id="@+id/harga_kamar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_alignParentStart="true"
                android:layout_marginStart="59dp"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="300.000.00"
                android:textColor="#ff9933"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/rp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView3"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Rp "
                android:textColor="#ff9933"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="21dp"
                android:layout_height="19dp"
                android:layout_below="@+id/imageView4"
                android:layout_alignParentStart="true"
                android:layout_marginStart="11dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/d" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_marginStart="5dp"
                android:layout_marginTop="22dp"
                android:layout_toEndOf="@+id/harga_kamar"
                android:fontFamily="@font/montserrat"
                android:text="@string/night"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/harga_kamar"
                android:layout_alignParentStart="true"
                android:layout_marginStart="11dp"
                android:layout_marginTop="-1dp"
                android:fontFamily="@font/montserrat"
                android:text="Inclusive of Taxes"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/harga_kamar"
                android:layout_alignParentStart="true"
                android:layout_marginStart="53dp"
                android:layout_marginTop="35dp"
                android:onClick="displayToastMsg"
                android:text="Book Now !"
                android:textColor="#ffffff"
                android:theme="@style/buttonstyle1" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="25dp"
                android:layout_height="21dp"
                android:layout_below="@+id/imageView2"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                app:srcCompat="@drawable/b" />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>